@model IEnumerable<QuanLyDiemSinhVien.Models.Lop>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Thêm mới lớp", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaLop)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenLop)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Khoas.TenKhoa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HeDaoTaos.TenHeDaoTao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KhoaHocs.TenKhoaHoc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaLop)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenLop)
    </td>


    <td>
        @Html.DisplayFor(modelItem => item.Khoas.TenKhoa)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HeDaoTaos.TenHeDaoTao)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.KhoaHocs.TenKhoaHoc)
    </td>


    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.MaLop }) |
        @Html.ActionLink("Details", "Details", new { id = item.MaLop }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.MaLop })
    </td>
</tr>
}

</table>
